<% provide(:title, 'Sign up') %>
<h1>新規会員登録</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :パスワード確認用 %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>